<% @setting = Setting.first %>
  <% @name = @setting.setting01 %>
    <% @deck.shuffle.each_with_index do |card, index| %>
      <% abc = index * 1.16 %>
        
        <% @setting = Setting.first %>
          <% if @setting.setting02 == "true" %>
            <img id= <%= card[:id] %> class="mgCard organon-card-front" style="top: 2%; left: <%= abc %>%; visibility: visible;  background-image: image-url('/<%= @name %>/CardBack.jpg'); background-size: contain; background-repeat: no-repeat;" src= "/<%= @name %>/CardBack.jpg" draggable="" ondragstart="drag(event);" onclick="press(event);" data-toggle="" data-target="#compareAllModal" data-card-id="<%= card[:id] %>">
            <%= render "tarot/compareAllmodal" %>
          <% else%>
            <img id= <%= card[:id] %> class="mgCard organon-card-front" style="top: 2%; left: <%= abc %>%; visibility: visible;  background-image: image-url('/<%= @name %>/CardBack.jpg'); background-size: contain; background-repeat: no-repeat;" src= "/<%= @name %>/CardBack.jpg" draggable="" ondragstart="drag(event);" onclick="press(event);" data-toggle="" data-target="#compareModal" data-card-id="<%= card[:id] %>">
            <%= render "tarot/comparemodal" %>
          <% end %> 
        
    <% end %>  